# PDF Compressor Pro - Environment Variables Template

# Node Environment
NODE_ENV=development

# Server Configuration (Dev: 5000, Prod: 8000)
PORT=5000
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Production URLs (uncomment and update for production)
# PORT=8000  
# CLIENT_URL=https://yourapp.com
# FRONTEND_URL=https://yourapp.com

# Database Configuration
DATABASE_URL=postgres://pdf_user:pdf_password@localhost:5432/pdf_compressor_dev
POSTGRES_DB=pdf_compressor_dev
POSTGRES_USER=pdf_user
POSTGRES_PASSWORD=pdf_password

# Production Database Configuration
# DATABASE_URL=postgres://pdf_user:pdf_password@postgres:5432/pdf_compressor_prod
# POSTGRES_DB=pdf_compressor_prod

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@pdfcompressor.pro
FROM_NAME=PDF Compressor Pro

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=application/pdf

# React App Environment Variables (for client)
REACT_APP_API_URL=http://localhost:5000
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
REACT_APP_ENABLE_COMPRESSION_ANALYTICS=true
REACT_APP_MAX_FILE_SIZE=52428800

# Production React Environment Variables
# REACT_APP_API_URL=https://api.yourapp.com

# Development specific
WDS_SOCKET_HOST=0.0.0.0
WATCHPACK_POLLING=true

# Processing Configuration
PROCESSING_TIMEOUT=300000
MAX_CONCURRENT_JOBS=5
CLEANUP_INTERVAL=3600000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=pdf-compressor-uploads

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID