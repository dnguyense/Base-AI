{
  "name": "pdf-compress-app",
  "version": "1.0.0",
  "description": "PDF Compression Tool - Clone of pdfguru.com compress feature",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "start": "concurrently \"npm run server:start\" \"npm run client:build\"",
    "server:start": "cd server && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && CI=true npm test",
    "test:unit": "npm run test:server:unit && npm run test:client:unit",
    "test:server:unit": "cd server && npm run test:unit",
    "test:client:unit": "cd client && npm run test:unit",
    "test:integration": "cd server && npm run test:integration",
    "test:e2e": "npm run test:e2e:setup && npm run test:e2e:run",
    "test:e2e:setup": "cd e2e && npm install",
    "test:e2e:run": "cd e2e && npm test",
    "test:watch": "npm run test:server:watch",
    "test:server:watch": "cd server && npm run test:watch",
    "test:coverage": "npm run test:server:coverage && npm run test:client:coverage",
    "test:server:coverage": "cd server && npm run test:coverage",
    "test:client:coverage": "cd client && npm run test:coverage"
  },
  "keywords": [
    "pdf",
    "compression",
    "webapp",
    "react",
    "node.js"
  ],
  "author": "Base-AI",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2"
  }
}
